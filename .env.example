# === Infrastructure (Docker Compose) ===
POSTGRES_USER=aiagent
POSTGRES_PASSWORD=changeme
POSTGRES_DB=aiagent

# === Database ===
DATABASE_URL=postgresql://aiagent:changeme@localhost:5432/aiagent

# === Redis ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === API Keys ===
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# === Services ===
AI_API_URL=http://localhost:8000
WHATSAPP_API_PORT=3001
WHATSAPP_API_HOST=0.0.0.0

# === Logging ===
LOG_LEVEL=info

# === Finance Dashboard ===
# Your WhatsApp JID for linking the web dashboard to your account
# Find this in your WhatsApp client logs or use format: phonenumber@s.whatsapp.net
DEFAULT_WHATSAPP_JID=

# === Production Deployment ===
# CORS: Comma-separated list of allowed origins for the finance dashboard
# For local development, leave as default. For production, add your dashboard domain.
# Example: https://finance.yourdomain.com,http://localhost:3002
CORS_ORIGINS=http://localhost:3002,http://127.0.0.1:3002

# API URL for the dashboard (baked at build time via docker compose build arg)
# For production, set this to your API's public URL before building the dashboard
# Example: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000
